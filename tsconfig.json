{
    "compilerOptions": {
        "target": "es2016",
        "lib": ["es2016"],
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": false,
        "declarationMap": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "paths": {
            "@firebase/firestore": [
                "./node_modules/@firebase/firestore"
            ]
        }
    },
    "include": [
        "src/**/*",
    ]
}